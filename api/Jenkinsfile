pipeline {
    agent any

    tools {
        maven 'Maven-3.9'
        jdk 'JDK-17'
    }

    environment {
        SONAR_HOST_URL = credentials('SONAR_HOST_URL')
        SONAR_TOKEN = credentials('SONAR_TOKEN')
        DOCKER_REGISTRY = credentials('DOCKER_REGISTRY')
        APP_NAME = 'logismart'
        DOCKER_IMAGE = "${DOCKER_REGISTRY}/${APP_NAME}:${BUILD_NUMBER}"
        DOCKER_IMAGE_LATEST = "${DOCKER_REGISTRY}/${APP_NAME}:latest"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
    }

    stages {
        stage('Build & Test') {
            steps {
                sh 'mvn clean package'
            }
            post {
                always {
                    junit testResults: '**/target/surefire-reports/*.xml', allowEmptyResults: true
                    jacoco execPattern: '**/target/jacoco.exec'
                }
            }
        }

        stage('SonarQube') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh """
                        mvn sonar:sonar \
                            -Dsonar.projectKey=${APP_NAME} \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.token=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Docker') {
            when {
                branch 'main'
            }
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}")
                    docker.build("${DOCKER_IMAGE_LATEST}")

                    docker.withRegistry("https://${DOCKER_REGISTRY}", 'DOCKER_CREDENTIALS') {
                        docker.image("${DOCKER_IMAGE}").push()
                        docker.image("${DOCKER_IMAGE_LATEST}").push()
                    }
                }
            }
            post {
                always {
                    sh "docker rmi ${DOCKER_IMAGE} ${DOCKER_IMAGE_LATEST} || true"
                }
            }
        }
    }

    post {
        success {
            echo env.BRANCH_NAME == 'main' ? 'üöÄ Deployed!' : '‚úÖ Ready to merge!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
        always {
            cleanWs()
        }
    }
}